/* 提交按钮的默认样式 */
.btn-submit {
  width: 100%;
  height: 88px;
  line-height: 88px;
  border-color: #f5f5f5;
  background: #f5f5f5;
  font-size: 32px;
  color: #c5c5c5;
  text-align: center;
}

/* 提交按钮的激活样式 */
.btn-submit-active {
  background: #316ccb;
  color: #ffffff;
}

.btn-reset {
  display: inline-block;
  width: auto;
  padding: 0;
  margin: initial;
  font-size: 26px;
  line-height: 1;
  border-radius: 0;
  color: #353535;
  background-color: transparent;
}

.btn-reset:after {
  display: none;
}
