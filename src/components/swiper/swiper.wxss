/** swiper组件相关 */
.swiper-container {
  width: 100%;
  height: 984px;
  padding-bottom: 20px;
  overflow: hidden;
  white-space: nowrap;
  font-size: 0;
}

.swiper-group {
  display: inline-block;
  margin-top: 20px;
  padding-left: 40px;
  transform: translateZ(0);
  will-change: transform;
}

.swiper-item {
  display: inline-block;
  width: 646px;
  height: 920px;
  margin-top: 24px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 20px 0 rgba(0, 0, 0, 0.16);
  margin-left: 12px;
  margin-right: 12px;
  transition: transform linear 0.3s 0.1s;
  font-size: 30px;
}

.swiper-active {
  transform: translate3d(0, -24px, 0);
}
