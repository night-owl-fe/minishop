/** swiper组件相关 */
.swiper-container {
  width: 100%;
  height: 984rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  font-size: 0;
}

.swiper-group {
  display: inline-block;
  margin-top: 20rpx;
  padding-left: 40rpx;
  transform: translateZ(0);
  will-change: transform;
}

.swiper-item {
  display: inline-block;
  width: 646rpx;
  height: 920rpx;
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 20rpx 0 rgba(0, 0, 0, 0.16);
  margin-left: 12rpx;
  margin-right: 12rpx;
  transition: transform linear 0.3s 0.1s;
  font-size: 30rpx;
}

.swiper-active {
  transform: translate3d(0, -24rpx, 0);
}
