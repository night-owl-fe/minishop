/* recommends */
.recommends {
  padding: 0 30rpx 60rpx;
}

/* recommend item */
.recommends .recommend {
  position: relative;
  height: 407rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: 0 0 15rpx 0 #ddd;
  transition: all .3s linear;
}

.recommends .recommend:hover {
  box-shadow: 0 0 15rpx 0 #999;
}

.recommends .recommend .program {
  position: absolute;
  height: 131rpx;
  padding: 20rpx 30rpx;
  bottom: 0;
  left: 0;
  background-color: rgba(255, 255, 255, .9);
  border-radius: 0 0 20rpx 20rpx;
  border-top: 1rpx solid #f1f1f1;
}

/* 相关推荐 */
.recommend-list {
  padding: 14rpx 20rpx;
  color: #333;
  background-color: #fff;
  border: 1rpx solid #f1f1f1;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 0 #ddd;
}

.recommend-list .program {
  position: relative;
  padding: 10rpx;
  margin-bottom: 14rpx;
}

.recommend-list .program:last-child {
  border-bottom-color: transparent;
}

.recommend-list .program .btn-get {
  position: relative;
  top: 0;
  right: 0;
}

.recommend-list .program .program-logo {
  margin-left: 0;
  margin-right: 30rpx;
}

.recommend-list .program .program-text {
  padding-right: 30rpx;
}
